<h1>My Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
    <li><%= (task.completed ? "<i class='fa-regular fa-square-check'></i>".html_safe : "<i class='fa-light fa-square'></i>".html_safe) %> - <%= link_to task.title, task_path(task) %></li>
  <% end %>
</ul>

<%= link_to 'New Task', new_task_path %>
